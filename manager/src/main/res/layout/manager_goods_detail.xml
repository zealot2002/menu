<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.zzy.common.widget.EffectScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
            <com.zzy.common.widget.RoundImageView
                android:id="@+id/ivPic"
                android:layout_width="240dp"
                android:layout_height="160dp"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图片:"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:textColor="@color/text_gray"
                />

            <LinearLayout
                android:id="@+id/llName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivPic"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="名称:"
                    android:textColor="@color/text_gray"
                    />
                <EditText
                    android:id="@+id/etName"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:maxEms="12"
                    android:textColor="@color/text_black"
                    android:textSize="13sp"
                    android:maxLines="1"
                    android:inputType="text"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llName"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="价格:"
                    android:textColor="@color/text_gray"
                    />
                <EditText
                    android:id="@+id/etPrice"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:maxEms="12"
                    android:textColor="@color/text_black"
                    android:textSize="13sp"
                    android:maxLines="1"
                    android:inputType="number"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="元"
                    android:textColor="@color/text_gray"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tvCategory"
                android:layout_below="@+id/llPrice"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="类别:"
                android:textColor="@color/text_gray"
                />
            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_toRightOf="@+id/tvCategory"
                android:layout_alignBottom="@+id/tvCategory"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/tvState"
                android:layout_below="@+id/tvCategory"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="状态:"
                android:textColor="@color/text_gray"
                />
            <Spinner
                android:id="@+id/spinnerState"
                android:layout_toRightOf="@+id/tvState"
                android:layout_alignBottom="@+id/tvState"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/tvDesc"
                android:layout_below="@+id/tvState"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="描述:"
                android:textColor="@color/text_gray"
                />
            <EditText
                android:id="@+id/etDesc"
                android:layout_below="@+id/tvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="13sp"
                android:inputType="textMultiLine"
                />
        </RelativeLayout>
    </com.zzy.common.widget.EffectScrollView>
    <Button
        android:id="@+id/btnOk"
        android:layout_width="520px"
        android:layout_height="88px"
        android:text="@string/ok"
        android:textSize="36px"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round_orane_bg"
        />

</RelativeLayout>
