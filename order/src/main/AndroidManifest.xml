<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zzy.order">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".view.OrderConfirmActivity"
            android:theme="@style/activity_theme"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustPan|stateHidden"
            />

        <activity android:name=".view.OrderDetailActivity"
            android:theme="@style/activity_theme"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden|stateUnchanged"
            />

        <activity android:name=".view.OrderTodayActivity"
            android:theme="@style/activity_theme"
            android:launchMode="singleTask"
            />

        <activity android:name=".view.OrderHistoryActivity"
            android:theme="@style/activity_theme"
            android:launchMode="singleTask"
            />
    </application>

</manifest>